{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "amlregistry": {
                "username": "__REGISTRY_USER_NAME",
                "password": "__REGISTRY_PASSWORD",
                "address": "__REGISTRY_SERVER_NAME"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "send_telemetry": {
            "version": "1.2",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "__REGISTRY_TELEMETRY_IMAGE_LOCATION",
              "createOptions": "__CREATE_OPTIONS_TELEMETRY"
            }
          },
          "classification": {
            "type": "docker",
            "settings": {
                "image": "__REGISTRY_ML_IMAGE_LOCATION",
                "createOptions":"__CREATE_OPTIONS_INFERENCE"
            },
            "version": "1.0",
            "status": "running",
            "restartPolicy": "always"
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "send_telemetryToclassification": "FROM /messages/modules/send_telemetry/outputs/temperatureOutput INTO BrokeredEndpoint(\"/modules/classification/inputs/amlInput\")",
          "classificationToIoTHub": "FROM /messages/modules/classification/outputs/amlOutput INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}